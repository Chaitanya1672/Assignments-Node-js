<%- include('./partials/header.ejs') %>

  <!-- Home page for adding new products  -->
  <div class="text-center center-div mt-1 mb-1" id="login">
    <div class="container w-50 border py-5">
      <div class="title pb-5">
        <h2 class="font-weight-bold">Fill the details</h2>

      </div>
      <form action="/addproduct" method="POST" id="regisForm" class="pt-2 w-75 m-auto ">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" name="name" id="name" required />
        </div>
        <div class="form-group">
          <input type="number" class="form-control" placeholder="price" name="price" id="price" required />
        </div>
        <div class="form-group">
          <input type="number" class="form-control" placeholder="quantity" name="quantity" id="quantity" required />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="description" id="description" placeholder="description"
            required />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="imgUrl" id="imgUrl" placeholder="Image Url" />
        </div>
        <button type="submit" class="btn btn-success rounded-pill mt-2">Submit</button>
      </form>
      <%- include('./partials/footer') %>