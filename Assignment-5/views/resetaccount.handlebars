{{> header}}
{{!-- This Page is for verifying email, if it exists  --}}
<section class="vh-auto" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Account Verification</p>
                  {{#if errMsg}}
                    <div class="alert alert-danger"> {{errMsg}}</div>
                  {{/if}}
                  {{#if succMsg}}
                    <div class="alert alert-success"> {{succMsg}}</div>
                  {{/if}}
              <form action="/postaccountreset" method="POST"  class="mx-1 mx-md-4" >
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-2 ">
                      <input
                        type="text"
                        id="email"
                        name="email"
                        class="form-control input-lg"
                        pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$"
                        title="Try Email lke this emailname@gmail.com"
                        required
                      />
                      <label class="form-label" for="email">Your Registered E-Mail</label>
                    </div>
                  </div>
                     <input type="hidden" name="_csrf" value="{{csrf}}"/>
                  <div class="d-flex justify-content-between mx-4 mb-3 mb-lg-4 mt-5">
                    <button
                      type="submit"
                      class="btn btn-primary btn-lg"
                    >Verify Mail</button>

                    <a href="/regis" type="button"   class="btn btn-info btn-lg" >
                    New User</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{> footer}}