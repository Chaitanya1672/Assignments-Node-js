{{!-- Registraion Page for New user --}}
{{> header}}

<div class="text-center center-div mt-1 mb-1" id="login">
  <div class="container w-50 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Register User</h2>

     
      {{#if errMsg}}<div class="alter alert-danger text-center">{{errMsg}}</div>
      {{else}}<div class="alter alert-success text-center">{{succsMsg}}</div>
      {{/if}}
      <div id="error"></div>

    </div>
    <form  action="/postdata" method="POST" class="pt-2 w-75 m-auto ">
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          placeholder="First Name"
          name="fname"
          id="fname"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          placeholder="Last Name"
          name="lname" 
          id="lname"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="Email"
          name="email"
          id="email"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          id="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="number"
          class="form-control"
          name="age"
          id="age"
          placeholder="Age"
          required
          />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="msgBx"
          id="msgBx"
          placeholder="Message Box"
          value= ''
          />
      </div>
      <button type="submit" class="btn btn-success rounded-pill mt-2">Submit</button>
    </form>
  </div>
</div>

{{> footer}}