doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  title Contact-Form
include ./partials/header.pug
//- Contact form for users data
.container.p-3
  h2.text-center Contact Form
  form(method='POST' action='/submitdata')
    .form-floating.mb-3
      input#floatingInput.form-control(type='text' placeholder='Firstname' name='firstname' required)
      label(for='floatingInput') First Name
    .form-floating.mb-3
      input#floatingInput.form-control(type='text' placeholder='Lastname' name='lastname' required)
      label(for='floatingInput') Last Name
    .form-floating.mb-3
      input#floatingInput.form-control(type='email' placeholder='name@example.com' name='email' required)
      label(for='floatingInput') Email address
    .form-floating.mb-3
      input#floatingInput.form-control(type='number' placeholder='984472634' name='mobnumber' required)
      label(for='floatingInput') Contact Number
    .form-group.mb-3
      input.btn.btn-success(type='submit' value='Submit')
      
include ./partials/footer.pug